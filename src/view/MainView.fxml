<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <TableView fx:id="movieTable" layoutY="331.0" prefHeight="369.0" prefWidth="900.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="180.0" text="Name" />
          <TableColumn fx:id="genreColumn" prefWidth="180.0" text="Genre" />
            <TableColumn fx:id="dateColumn" prefWidth="180.0" text="Release Date" />
            <TableColumn fx:id="ratingColumn" prefWidth="180.0" text="Rating" />
            <TableColumn fx:id="buttonColumn" prefWidth="179.0" />
        </columns>
      </TableView>
      <TextField fx:id="searchField" layoutX="352.0" layoutY="123.0" prefHeight="31.0" prefWidth="221.0" />
      <Text fx:id="titleText" layoutX="364.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Movie Search">
         <font>
            <Font size="29.0" />
         </font>
      </Text>
      <ComboBox fx:id="searchComboBox" layoutX="176.0" layoutY="123.0" prefWidth="150.0" promptText="Search by" />
      <Button fx:id="searchButton" layoutX="595.0" layoutY="123.0" mnemonicParsing="false" onAction="#addToTable" text="Search" />
      <Button fx:id="ratedButton" layoutX="212.0" layoutY="224.0" mnemonicParsing="false" onAction="#ratedButtonEvent" text="Highest Rated" />
      <Button fx:id="allButton" layoutX="390.0" layoutY="224.0" mnemonicParsing="false" onAction="#allButtonEvent" prefHeight="31.0" prefWidth="124.0" text="All Movies" />
      <Button fx:id="longestButton" layoutX="573.0" layoutY="224.0" mnemonicParsing="false" onAction="#longestButtonEvent" text="Longest Movies" />
   </children>
</AnchorPane>
